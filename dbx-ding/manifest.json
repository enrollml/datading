{
  "manifest_version": 3,
  "name": "Databricks ding",
  "description": "Plays a sound whenever a cell run is done. Add a '# ding' comment to the cell to make it ding.",
  "version": "1.0",
  "author": "Idan Dardikman",

  "action": { "default_popup": "popup.html" },
  "permissions": ["notifications", "storage", "tabs"],
  "background": { "service_worker": "background.js" },

  "icons": {
    "16": "images/icons/16.png",
    "19": "images/icons/19.png",
    "38": "images/icons/38.png",
    "64": "images/icons/64.png",
    "128": "images/icons/128.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "sounds/classic.mp3",
        "sounds/game.wav",
        "sounds/scifi.wav"
      ],
      "matches": ["https://*.cloud.databricks.com/*"]
    }
  ],

  "content_scripts": [
    {
      "matches": ["https://*.cloud.databricks.com/*"],
      "js": ["cont.js"]
    }
  ]
}
